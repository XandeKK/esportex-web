<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row bg-secondary" style=" height:200px;">
            <div class="ms-4 mt-4 d-flex flex-column" style="width: 150px;">
              <%= image_tag @user.avatar, class: "img-fluid img-thumbnail mt-3 mb-2", style:"width: 150px; z-index: 1" if @user.avatar.attached? %>
            </div>
            <div class="ms-3" style="margin-top: 120px;">
              <h5>
                <%= @user.name %>
              </h5>
              <p class="text-muted">
                @<%= @user.username%>
              </p>
            </div>
            <div class="ms-auto d-flex flex-column align-items-end">
              <div class="me-1 my-2">
                <a class="btn btn-info"><i class="fa fa-paper-plane" aria-hidden="true"></i></a>
              </div>
              <div class="me-1 mb-2">
                <%= turbo_frame_tag "button" do %>
                  <%= render partial: "follower/button", locals: { user: @user.id } if @user.id != Current.user[:id] %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="mb-4 p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div class="px-3">
                <p class="mb-1 h5">
                  <%= @followers %>
                </p>
                <p class="small text-muted mb-0">Followers</p>
              </div>
              <div>
                <p class="mb-1 h5">
                  <%= @following %>
                </p>
                <p class="small text-muted mb-0">Following</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">Bio</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">
                  <%= @user.bio %>
                </p>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>